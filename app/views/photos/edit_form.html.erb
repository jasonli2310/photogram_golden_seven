<h1>Update your photo</h1>

<form action="http://localhost:3000/update_photo/<%=@photo_id%>">
  <div>
    <label for="photo_caption">Caption:</label>
    <input id="photo_caption" type="text" name="the_caption" value ="<%=@currentcaption%>">
  </div>
  <div>
    <label for="photo_image_url">Image URL:</label>
    <input id="photo_image_url" type="text" name="the_source" value ="<%=@currentsource%>">
  </div>
  <div>
    <button>Update Photo</button>
  </div>
</form>
